                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <div id="rightPanel">
        <div id="customerInfo" style="max-width:800px;" data-bind="{this.dataContext,to=currentItem,source=customerVM}" data-view="name=dataform">
